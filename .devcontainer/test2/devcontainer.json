{
  // Name of the Dev Container
  "name": "test2",
  
  // Home dir
  "workspaceFolder": "/home/jovyan",

  // Dockerfile
  "build": { "dockerfile": "Dockerfile" },

  // Open README
  "customizations": {
    "codespaces": {
      "openFiles": [
         "README.md"
      ]
    },
  },
  
  // Ports to be forwarded from the container to the host
  "forwardPorts": [8889],

  // Attributes for the forwarded ports
  "portsAttributes": {
    "8889": {
      "label": "Jupyter Lab",
    }
  },

  // Command to run after the container starts. Runs script to add a link to the Jupyter Lab
  "postStartCommand": "jupyter lab --ip=0.0.0.0 --port=8889 --allow-root --no-browser --NotebookApp.token='' --NotebookApp.password=''",
}
